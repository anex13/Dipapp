<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e0e0e0"
    android:orientation="vertical">


    <ImageButton
        android:id="@+id/winbtn"
        android:layout_width="160dp"
        android:background="@drawable/win"
        android:translationZ="5dp"
        tools:layout_constraintTop_creator="1"
        tools:layout_constraintRight_creator="1"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_constraintLeft_creator="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.08"
        android:layout_height="160dp"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/nixbtn"
        android:background="@drawable/nix"
        android:translationZ="5dp"
        tools:layout_constraintBottom_creator="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="328dp"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        android:layout_marginStart="16dp"
        app:layout_constraintLeft_toRightOf="@+id/winbtn" />


    <ImageButton
        android:id="@+id/lanbtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/lan"
        android:translationZ="5dp"
        tools:layout_conversion_absoluteX="15dp"
        tools:layout_conversion_absoluteY="185dp"
        tools:layout_conversion_absoluteWidth="160dp"
        tools:layout_conversion_absoluteHeight="160dp"
        app:layout_constraintLeft_toLeftOf="@+id/winbtn"
        app:layout_constraintTop_toBottomOf="@+id/winbtn"
        android:layout_marginTop="16dp" />

    <ImageButton
        android:id="@+id/mobbtn"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:background="@drawable/mob"
        android:translationZ="5dp"
        tools:layout_conversion_absoluteX="185dp"
        tools:layout_conversion_absoluteY="185dp"
        tools:layout_conversion_absoluteWidth="160dp"
        tools:layout_conversion_absoluteHeight="160dp"
        app:layout_constraintTop_toTopOf="@+id/lanbtn"
        app:layout_constraintLeft_toLeftOf="@+id/nixbtn" />

</android.support.constraint.ConstraintLayout>