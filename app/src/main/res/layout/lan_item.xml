<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Host name"
        android:id="@+id/textHostname"
        android:textSize="16dp"
        android:textIsSelectable="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="192.168.1.2"
        android:id="@+id/textIP"
        android:layout_below="@+id/textHostname"
        android:layout_alignParentStart="true"
        android:textSize="16dp"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Mac: aa:00:11:22:33:ff"
        android:id="@+id/textMacAddr"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textIP"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="vendor: Mikrotik"
        android:id="@+id/textVendor"
        android:layout_below="@+id/textMacAddr"
        android:layout_alignParentStart="true"
        android:textSize="12dp"
        android:layout_toStartOf="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:src="@android:drawable/ic_menu_info_details"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_alignBottom="@+id/textVendor" />

</RelativeLayout>