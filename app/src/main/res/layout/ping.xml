<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:id="@+id/pingurl"
        android:contentDescription="введите адрес"
        android:editable="true"
        android:singleLine="true"
        android:inputType="textWebEditText|textWebEmailAddress"
        android:text="google.com" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ping"
        android:id="@+id/button"
        android:layout_gravity="right"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/pingurl"
        android:layout_toEndOf="@+id/pingurl" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Результаты проверки"
        android:id="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/button"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:autoText="false"
        android:editable="false"
        android:enabled="false"
        android:textColor="#000000" />
</RelativeLayout>